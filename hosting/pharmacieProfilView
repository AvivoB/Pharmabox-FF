    <script>
        function redirectToStore() {
            var userAgent = navigator.userAgent || navigator.vendor || window.opera;
        
            // Pour Android
            if (/android/i.test(userAgent)) {
                window.location.href = 'https://play.google.com/store/apps/details?id=com.pharmabox.mobileapp';
            }
        
            // Pour iOS
            else if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
                window.location.href = 'https://apps.apple.com/fr/app/pharma-box/id6469619913';
            }
        
            // Pour les autres plateformes
            else {
                window.location.href = 'https://votrewebsite.com';
            }
        }
        
        // Appeler la fonction
        redirectToStore();
        
    </script>
